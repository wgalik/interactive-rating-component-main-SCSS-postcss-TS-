{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",

    "outDir": "./dist",
    "rootDir": "./src/ts",

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "../src/ts",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules"]
}
